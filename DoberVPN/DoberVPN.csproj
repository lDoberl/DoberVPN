<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <StartupObject>DoberVPN.App</StartupObject>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="back.png" />
    <None Remove="dobervpn.png" />
    <None Remove="Jura-VariableFont_wght.ttf" />
    <None Remove="settings.png" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Extended.Wpf.Toolkit" Version="4.6.0" />
    <PackageReference Include="Hardcodet.NotifyIcon.Wpf" Version="1.1.0" />
    <PackageReference Include="HtmlAgilityPack" Version="1.11.59" />
    <PackageReference Include="MaterialDesignThemes" Version="4.9.0" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="back.png" />
    <Resource Include="dobervpn.png" />
    <Resource Include="Jura-VariableFont_wght.ttf" />
    <Resource Include="settings.png" />
  </ItemGroup>

</Project>
